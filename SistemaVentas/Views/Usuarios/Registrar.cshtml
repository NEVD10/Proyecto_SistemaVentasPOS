@model SistemaVentas.Models.Usuario

@{
    ViewData["Title"] = "Registrar Usuario";
}

<div class="container-fluid">
    <!-- Header con título y botón volver -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">
                <i class="bi bi-person-plus-fill me-2"></i>Registrar Nuevo Usuario
            </h2>
            <p class="text-muted">Registra un nuevo usuario en el sistema</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left-circle me-2"></i>Volver a la lista
            </a>
        </div>
    </div>

    <!-- Card principal con formulario -->
    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-primary text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="bi bi-ui-checks-grid me-2"></i>Datos del Usuario
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Registrar" method="post">
                @Html.AntiForgeryToken()
                <!-- Validaciones -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <!-- Nombre de Usuario -->
                    <div class="col-md-6">
                        <label asp-for="NombreUsuario" class="form-label">
                            <i class="bi bi-person me-1 text-primary"></i>Nombre de Usuario
                        </label>
                        <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese nombre de usuario" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="col-md-6">
                        <label asp-for="PasswordHash" class="form-label">
                            <i class="bi bi-lock me-1 text-primary"></i>Contraseña
                        </label>
                        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Ingrese contraseña" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>

                    <!-- Nombre Completo -->
                    <div class="col-md-6">
                        <label asp-for="NombreCompleto" class="form-label">
                            <i class="bi bi-person-vcard me-1 text-primary"></i>Nombre Completo
                        </label>
                        <input asp-for="NombreCompleto" class="form-control" placeholder="Ingrese nombre completo" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <!-- Rol -->
                    <div class="col-md-6">
                        <label asp-for="Rol" class="form-label">
                            <i class="bi bi-person-badge me-1 text-primary"></i>Rol
                        </label>
                        <select asp-for="Rol" class="form-control">
                            <option value="">Seleccione rol...</option>
                            <option value="Administrador">Administrador</option>
                            <option value="Vendedor">Vendedor</option>
                            <option value="Almacen">Almacen</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones -->
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-save me-2"></i>Registrar Usuario
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}