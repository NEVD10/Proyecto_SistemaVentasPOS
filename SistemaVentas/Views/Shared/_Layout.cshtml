<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Ventas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/reporte.css" />
    <link rel="stylesheet" href="~/SistemaVentas.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <i class="bi bi-shop text-white me-2"></i>
                    <span class="brand-text">Sistema Ventas</span>
                </div>
            </div>

            <div class="sidebar-content">
                <ul class="sidebar-nav">
                    <!-- Dashboard Principal -->
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index" data-bs-toggle="tooltip" data-bs-placement="right" title="Dashboard">
                            <i class="bi bi-speedometer2"></i>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>

                    <!-- Sección de Ventas -->
                    <li class="nav-section">
                        <span class="nav-section-title">Ventas</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Ventas" asp-action="Index" data-bs-toggle="tooltip" data-bs-placement="right" title="Historial de Ventas">
                            <i class="bi bi-receipt"></i>
                            <span class="nav-text">Historial Ventas</span>
                        </a>
                    </li>
                    @if (Context.Session.GetString("Rol") == "Vendedor" || Context.Session.GetString("Rol") == "Administrador")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ventas" asp-action="Crear" data-bs-toggle="tooltip" data-bs-placement="right" title="Nueva Venta">
                                <i class="bi bi-cart-plus"></i>
                                <span class="nav-text">Nueva Venta</span>
                            </a>
                        </li>
                    }

                    <!-- Sección de Inventario -->
                    @if (Context.Session.GetString("Rol") == "Administrador")
                    {
                        <li class="nav-section">
                            <span class="nav-section-title">Inventario</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productos" asp-action="Index" data-bs-toggle="tooltip" data-bs-placement="right" title="Productos">
                                <i class="bi bi-box-seam"></i>
                                <span class="nav-text">Productos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productos" asp-action="Crear" data-bs-toggle="tooltip" data-bs-placement="right" title="Agregar Producto">
                                <i class="bi bi-plus-square"></i>
                                <span class="nav-text">Agregar Producto</span>
                            </a>
                        </li>
                    }

                    <!-- Sección de Clientes -->
                    @if (Context.Session.GetString("Rol") == "Administrador")
                    {
                        <li class="nav-section">
                            <span class="nav-section-title">Clientes</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clientes" asp-action="Index" data-bs-toggle="tooltip" data-bs-placement="right" title="Lista Clientes">
                                <i class="bi bi-people"></i>
                                <span class="nav-text">Lista Clientes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clientes" asp-action="Crear" data-bs-toggle="tooltip" data-bs-placement="right" title="Nuevo Cliente">
                                <i class="bi bi-person-plus"></i>
                                <span class="nav-text">Nuevo Cliente</span>
                            </a>
                        </li>
                    }

                    <!-- Sección de Reportes -->
                    @if (Context.Session.GetString("Rol") == "Administrador")
                    {
                        <li class="nav-section">
                            <span class="nav-section-title">Reportes</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reportes" asp-action="Diario" data-bs-toggle="tooltip" data-bs-placement="right" title="Ventas Diarias">
                                <i class="bi bi-bar-chart"></i>
                                <span class="nav-text">Ventas Diarias</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reportes" asp-action="Mensual" data-bs-toggle="tooltip" data-bs-placement="right" title="Ventas Mensuales">
                                <i class="bi bi-graph-up"></i>
                                <span class="nav-text">Ventas Mensuales</span>
                            </a>
                        </li>
                    }

                    <!-- Sección de Administración -->
                    @if (Context.Session.GetString("Rol") == "Administrador")
                    {
                        <li class="nav-section">
                            <span class="nav-section-title">Administración</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Registrar" data-bs-toggle="tooltip" data-bs-placement="right" title="Usuarios">
                                <i class="bi bi-person-gear"></i>
                                <span class="nav-text">Usuarios</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <div id="content" class="content">
            <!-- Top Navigation Bar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white topbar">
                <div class="container-fluid">
                    <!-- Sidebar Toggle Button -->
                    <button class="btn btn-link sidebar-toggle" type="button" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <!-- Right Side Items -->
                    <div class="navbar-nav ms-auto d-flex flex-row align-items-center">
                        @if (Context.Session.GetString("NombreUsuario") != null)
                        {
                            <!-- User Profile -->
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-fill rounded-circle me-2" style="font-size: 1.5rem; color: #4e73df;"></i>
                                    <span class="d-none d-md-inline">@Context.Session.GetString("NombreUsuario") (@Context.Session.GetString("Rol"))</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="main-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Dashboard JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('collapsed');
                    content.classList.toggle('expanded');
                });
            }

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Auto-hide tooltips when sidebar is collapsed
            sidebar.addEventListener('transitionend', function() {
                if (sidebar.classList.contains('collapsed')) {
                    tooltipList.forEach(function(tooltip) {
                        tooltip.enable();
                    });
                } else {
                    tooltipList.forEach(function(tooltip) {
                        tooltip.disable();
                    });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>